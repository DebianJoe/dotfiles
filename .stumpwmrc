;;;;Variables
;; make a much cooler into to stumpwm

(setf *startup-message* nil)
(setf *startup-message* "Everything should be lisp")


;;;;Functions
(define-key *root-map* (kbd "x") "chromium")

;;CHROMIUM
(defcommand chromium () ()
 "Launch Chromium"
 (run-or-raise "chromium" '(:class "Chromium")))

;;urxvt
(define-key *root-map* (kbd "u") "x-terminal-emulator")
(defcommand x-terminal-emulator () ()
 "Launch the urxvt client"
 (run-or-raise "x-terminal-emulator" '(:instance "x-terminal-emulator")))

(define-key *root-map* (kbd "e") "emacs24")
(defcommand emacs24 () ()
 "Launch or raise Emacs24X"
 (run-or-raise "emacs24" '(:class "Emacs24")))