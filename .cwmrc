#Font for Menu
fontname "standard 07_57 caps:pixelsize=10"

#Borders
borderwidth 3
color activeborder grey
color inactiveborder black

#Colors
color menubg '#1a1b1c'
color font '#808080'

#App Menu
command urxvt		urxvt
command tmux+urxvt	"urxvt -e tmux"
command emacs		emacs
command cream		cream
command htop		"urxvt -e htop"
command clock		xclock
command mixer		"urxvt -e alsamixer"
command moc		"urxvt -e mocp"
command MC		"urxvt -e mc -b"
command links2		"urxvt -e links2"
command thunar		thunar
command web		chromium

#use urxvt as terminal
command term "urxvt"

bind CS-Left unmap
bind CS-Right unmap
bind CS-Up unmap
bind CS-Down unmap
bind C-Left unmap
bind C-Right unmap
bind C-Up unmap
bind C-down unmap
mousebind M-2 unmap

mousebind M-3 window_resize
