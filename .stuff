#!/bin/bash

clear
echo `uname -a`
echo " "
echo `acpi -t`
echo "Welcome back $USER, Choose Layout"
echo "1: Single Monitor"
echo "2: Dual Monitor"
read choice

if [ $choice -eq 1 ] ; then
    echo `xrandr --output VGA1 --off`
    echo "Single Monitor"
else
    echo `xrandr --output VGA1 --auto --right-of LVDS1`
    echo "Dual Monitor"
fi
